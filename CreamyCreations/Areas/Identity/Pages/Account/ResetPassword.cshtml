@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset your password";
}



<article class="container vh-100 pb-5">

    <header class="row justify-content-center pt-5">
        <div class="col-12 col-md-7">
            <h1 class="text-center">@ViewData["Title"]</h1>
        </div>
    </header>

    <section class="row justify-content-center">
        <div class="col-12 col-md-7 col-lg-6">
            <hr />
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Input.Code" type="hidden" />
                <div class="form-group d-none">
                    <label asp-for="Input.Email" type="hidden"></label>
                    <input asp-for="Input.Email" class="form-control" id="email" type="hidden" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Reset Password</button>
                </div>

            </form>
        </div>
    </section>

</article>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script type="text/javascript" defer>
		var hidden_input = document.getElementById("email");
		var url = new URL(window.location.href);
		//console.log(url.search.split("email=")[1])
		hidden_input.value = url.search.split("email=")[1];
	</script>
}
