@model CreamyCreations.ViewModels.CreateWeddingCakeVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>WeddingCake</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LevelId" class="control-label">Select level</label>
                <select asp-for="LevelId" class="form-control" asp-items="@(new SelectList(Model.Levels, nameof(Level.Price), nameof(Level.LevelNumber) ))">
                    <option disabled selected>Please select</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="CoverId" class="control-label">Select cover</label>
                <select asp-for="CoverId" class="form-control" asp-items="@(new SelectList(Model.Covers, nameof(Cover.CoverId), nameof(Cover.Flavor), nameof(Cover.Price) ))">
                    <option disabled selected>Please select</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="FillingId" class="control-label">Select filling</label>
                <select asp-for="FillingId" class="form-control" asp-items="@(new SelectList(Model.Fillings, nameof(Filling.FillingId), nameof(Filling.Flavor), nameof(Filling.Price) ))">
                    <option disabled selected>Please select</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="LabelId" class="control-label">Select label</label>
                <select asp-for="LabelId" class="form-control" asp-items="@(new SelectList(Model.Labels, nameof(Label.LabelId), nameof(Label.LabelName), nameof(Label.Price) ))">
                    <option disabled>Please select</option>
                </select>
            </div>
            
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label">Select total price</label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



