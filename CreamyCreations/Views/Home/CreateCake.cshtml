@model CreamyCreations.ViewModels.WeddingCakeVM

@{
    ViewData["Title"] = "CreateCake";
}

<h1>CreateCake</h1>

<h4>WeddingCakeVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCake">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Covers" class="control-label"></label>
                <select asp-for="WeddingCakeID" class="form-control">
                    @foreach (var item in @Model.Covers)
                    {
                        <option value="@item.CoverId">@item.Flavor</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Fillings" class="control-label"></label>
                <select asp-for="WeddingCakeID" class="form-control">
                    @foreach (var item in @Model.Fillings)
                    {
                        <option value="@item.FillingId">@item.Flavor</option>
                    }
                </select>
            </div>
            <div class="form-group">
                @foreach (var item in @Model.Decorations)
                {
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="@item.DecorationId" id="@item.DecorationId">
                        <label class="form-check-label" for="@item.DecorationId">
                            @item.Decoration1
                        </label>
                    </div>
                 }
             </div>
            <div class="form-group">
                <label asp-for="TotalPrice" class="control-label"></label>
                <input asp-for="TotalPrice" class="form-control" />
                <span asp-validation-for="TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
