@model CreamyCreations.ViewModels.DecorationsVM

@{
    ViewData["Title"] = "EditDecorations";
}

<h1>EditDecorations</h1>

<h4>DecorationsVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditDecorations">
            @for (var i = 0; i < Model.Decorations.Count(); i++)
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Decorations[i].DecorationId" />
                <div class="form-group">
                    <label asp-for="@Model.Decorations[i].Decoration1" class="control-label"></label>
                    <input asp-for="@Model.Decorations[i].Decoration1" class="form-control" />
                    <span asp-validation-for="@Model.Decorations[i].Decoration1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Decorations[i].Price" class="control-label"></label>
                    <input asp-for="@Model.Decorations[i].Price" class="form-control" />
                    <span asp-validation-for="@Model.Decorations[i].Price" class="text-danger"></span>
                </div>
                <hr />
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
