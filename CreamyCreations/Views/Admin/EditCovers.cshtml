@model CreamyCreations.ViewModels.CoversVM

@{
    ViewData["Title"] = "Edit Covers";
}


<article class="container pb-5">

    <header class="row justify-content-center pt-5">
        <div class="col-12 col-md-7">
            <h1 class="text-center">@ViewData["Title"] </h1>
        </div>
    </header>

    <section class="row justify-content-center">
        <div class="col-12 col-md-7 col-lg-6">
            <hr />

            <form asp-action="EditCovers">
                @for (var i = 0; i < Model.Covers.Count(); i++)
                {
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="@Model.Covers[i].CoverId" />
                    <div class="form-group">
                        <label asp-for="@Model.Covers[i].Flavor" class="control-label"></label>
                        <input asp-for="@Model.Covers[i].Flavor" class="form-control" />
                        <span asp-validation-for="@Model.Covers[i].Flavor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Covers[i].Price" class="control-label"></label>
                        <input asp-for="@Model.Covers[i].Price" class="form-control" />
                        <span asp-validation-for="@Model.Covers[i].Price" class="text-danger"></span>
                    </div>
                }
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </section>

    <section class="row justify-content-center">
        <div class="col-12 d-flex justify-content-center ">
            <a asp-action="Customization" class="btn btn-back mt-1">Back to List</a>
        </div>
    </section>

</article>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
