@model CreamyCreations.Models.Label

@{
    ViewData["Title"] = "Add New Label";
}

<article class="container vh-100 pb-5">

    <header class="row justify-content-center pt-5">
        <div class="col-12 col-md-7">
            <h1 class="text-center">@ViewData["Title"] </h1>
        </div>
    </header>

    <section class="row justify-content-center">
        <div class="col-12 col-md-7 col-lg-6">
            <hr />
            <form asp-action="AddLabel">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="LabelName" class="control-label">Label Name</label>
                    <input asp-for="LabelName" class="form-control" />
                    <span asp-validation-for="LabelName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </section>

    <section class="row justify-content-center">
        <div class="col-12 d-flex justify-content-center ">
            <a asp-action="Customization" class="btn btn-back mt-1">Back to list</a>
        </div>
    </section>

</article>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
